# OpenAI API Key for AI Assistant
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Site Configuration
SITE_URL=https://your-domain.com

# GitHub API (Optional - for real GitHub integration)
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username

# Contact Form (Optional - for real form submission)
CONTACT_EMAIL=your_email@example.com

# Google OAuth (for Calendar scheduling)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4321/api/google/callback
GOOGLE_CALENDAR_ID=primary
GOOGLE_REFRESH_TOKEN=your_owner_account_refresh_token
TIMEZONE=Asia/Jerusalem

# Analytics (optional)
PUBLIC_GA_ID=G-XXXXXXXXXX

# SMTP (for contact form)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=Your Name <no-reply@yourdomain.com>