// Get featured projects (you can replace this with real data)
const featuredProjects = [
  {
    title: 'AI Chat Assistant',
    description: 'Interactive AI-powered chat assistant integrated into the website using OpenAI API and React.',
    technologies: ['React', 'OpenAI API', 'TypeScript', 'Astro'],
    link: '/projects/ai-chat-assistant',
    github: '#',
    demo: '#'
  },
  {
    title: 'Contract Management System',
    description: 'Full-stack online contracts management system with microservices architecture.',
    technologies: ['Java', 'Spring', 'React', 'Node.js', 'Azure'],
    link: '/projects',
    github: '#',
    demo: '#'
  },
  {
    title: 'Telecom Negotiations Platform',
    description: 'Enterprise-level negotiations and contracts system for telecom service providers.',
    technologies: ['Java', 'Kafka', 'Kubernetes', 'OpenShift', 'MongoDB'],
    link: '/projects',
    github: '#',
    demo: '#'
  }
];

const skills = [
  { category: 'Backend', items: ['Java', 'Spring Framework', 'Node.js', 'Express.js', 'REST APIs', 'Microservices'] },
  { category: 'Frontend', items: ['React', 'Redux', 'TypeScript', 'JavaScript', 'SCSS'] },
  { category: 'DevOps & Cloud', items: ['Docker', 'Kubernetes', 'AWS', 'OpenShift', 'Jenkins', 'CI/CD'] },
  { category: 'Databases', items: ['MySQL', 'SQL Server', 'MongoDB', 'Redis', 'NoSQL'] }
];
---

<Layout title="Eyal Mizrahi - Full Stack Developer" description="Full Stack Developer with 6+ years of experience in Java, Spring, Node.js, React, and cloud platforms. Specializing in microservices, REST APIs, and scalable applications.">
