    <!-- Experience Highlights -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
            Professional Experience
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            I've had the privilege of working with amazing teams and companies, from fast-paced startups 
            to established enterprises, always focusing on delivering robust solutions.
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üè¢</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Code Oasis</h3>
            <p class="text-primary-600 dark:text-primary-400 font-medium">Full Stack Developer</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">May 2023 - Present</p>
            <p class="text-gray-600 dark:text-gray-300 mt-3">
              Leading development of online contracts management system with microservices architecture.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üì°</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Amdocs</h3>
            <p class="text-primary-600 dark:text-primary-400 font-medium">Software Engineer</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Jul 2021 - May 2023</p>
            <p class="text-gray-600 dark:text-gray-300 mt-3">
              Developed telecom negotiations and contracts system with Kafka and Kubernetes.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">üíª</span>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Trinity</h3>
            <p class="text-primary-600 dark:text-primary-400 font-medium">Full Stack Developer</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Aug 2018 - Jul 2021</p>
            <p class="text-gray-600 dark:text-gray-300 mt-3">
              Built CRM systems and mobile applications for Android and iOS platforms.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-primary-600 dark:bg-primary-700">
